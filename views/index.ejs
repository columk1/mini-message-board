<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <h1><%= title %></h1>
      <p>Welcome to <%= title %></p>
    </header>
    <main>
      <button class="nav-btn"><a href="/new">New Message</a></button>
      <div class="messages">
        <% messages.forEach(message => {%>
        <div class="message">
          <div class="message-header">
            <p class="message-user"><%= message.user %></p>
            <p class="message-added"><%= message.added %></p>
          </div>
          <div class="message-text"><%= message.text %></div>
        </div>
        <%})%>
      </div>
    </main>
  </body>
</html>
